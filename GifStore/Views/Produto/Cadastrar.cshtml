@using GifStore.Data.Enum
@model GifStore.Historias.Produto.Cadastrar.CadastrarProdutoViewModel
@{
    ViewData["Title"] = "Cadastrar Produto";
}


<div class="card">
    <div class="card-body">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <em class="mdi mdi-note-text-outline"></em> </span>
                    </div>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select id="Status" name="Status" asp-items="Html.GetEnumSelectList<StatusDoProduto>()" class="form-control">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success"><em class="mdi mdi-check"></em> Salvar</button>
                <a asp-action="Index" class="btn btn-outline-inverse"><em class="mdi mdi-close"></em> Cancelar</a>
            </div>
        </form>
    </div>
</div>