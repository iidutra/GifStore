@model GifStore.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-click">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>CPF</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.Nome
                        </td>
                        <td>
                            @Model.Email
                        </td>
                        <td>
                            @Model.Cpf
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="mb-2">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary float-left">Editar</a>
        </p>
    </div>
</div>

